generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id          String @id @default(uuid())
  cnpj        String @unique
  socialName  String @unique
  fantasyName String

  Contract Contract[]

  @@map("company")
}

model Contract {
  id          String @id @default(uuid())
  code        String
  title       String @unique
  withholding Float

  companyCnpj String
  company     Company @relation(fields: [companyCnpj], references: [cnpj])

  ContractInfo ContractInfo[]

  @@map("contract")
}

model ContractInfo {
  id                    String   @id @default(uuid())
  receiptNumber         Int
  emissionDate          DateTime
  finalDate             DateTime
  value                 Float
  issqn                 Float?
  irrf                  Float?
  csll                  Float?
  cofins                Float?
  inss                  Float?
  pis                   Float?
  calculatedWithholding Float?

  contractId String
  contract   Contract @relation(fields: [contractId], references: [id])

  ReceiptNotes ReceiptNotes[]

  @@map("contractInfo")
}

model ReceiptNotes {
  id            String @id @default(uuid())
  fileName      String
  savedFileName String
  filePath      String

  contractInfoId String
  contractInfo   ContractInfo @relation(fields: [contractInfoId], references: [id])

  @@map("receiptNotes")
}
